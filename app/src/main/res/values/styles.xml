<resources>
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/ripple_dark</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemForeground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemBackgroundCircle">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:stateListAnimator">@animator/animate_pressed_btn</item>
    </style>

    <style name="SelectableItemForegroundCircle">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:stateListAnimator">@animator/animate_pressed_btn</item>
    </style>

    <style name="AlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>
</resources>
